<h2>Products</h2>

{{#if products.length}}
<ul>
    {{#each products}}
    <li>
        <label>
            {{#if inTheBasket}}
            <input type="checkbox" checked>
            <span>{{_id}}</span>
            <span>{{name}}</span>
            <span>{{price}}</span>
            <span>{{supplier}}</span>
            {{else}}
            <input type="checkbox">
            <span>{{_id}}</span>
            <span>{{name}}</span>
            <span>{{price}}</span>
            <span>{{supplier}}</span>
            {{/if}}
            <button class="bin btn-small">Save</button>
        </label>
    </li>
    {{/each}}
</ul>
{{else}}
<p>No products!</p>
{{/if}}