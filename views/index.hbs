<h3>Products</h3>
<div>

    {{#if products.length}}
    <span style="font-weight:800; font-size:large;">Category</span>
    <div class="row section">
        {{#each products}}
        <div class="row">
            <div class="col s3 ">
                <form action="/filtr" method="POST">
                    <span> {{category}} </span>
                    <input type="hidden" value="{{category}}" name="category">
                    <button type="submit" class="bin btn-small teal accent-4">filtr</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>

    {{#each products}}
    <div class="row">
        <form action="/" method="POST">
            <div class="divider"></div>
            <div class="section">
                <span >name: </span>
                <span>{{name}} </span>
                <span >price $: </span>
                <span>{{price}} </span>
                <span >category: </span>
                <span>{{category}} </span>
                <span >supplier: </span>
                <span>{{supplier}} </span>
            </div>
            <input type="hidden" value="{{_id}}" name="id">
            {{#if inTheBasket}}
            <button type="submit" class="bin btn-small teal accent-4">Remove</button>
            {{else}}
            <button type="submit" class="bin btn-small orange accent-4">Put</button>
            {{/if}}
        </form>
    </div>
    {{/each}}
    {{else}}
    <p>No products!</p>
    {{/if}}

</div>