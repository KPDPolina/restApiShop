<h3>Products</h3>
<div>
    
    <span style="font-weight:800; font-size:large;">Category</span>

    <div class="row section">
        <div class="row">
            <div class="col s3 ">
                <form action="/" method="GET">
                    <button type="submit" class="bin btn-small teal accent-4">All</button>
                </form>
            </div>
        </div>

        {{#each products}}
        <div class="row">
            <div class="col s3 ">
                <form action="/filtr" method="POST">
                    <input type="hidden" value="{{category}}" name="category">
                    <button type="submit" class="bin btn-small teal accent-4">{{category}}</button>
                </form>
            </div>
        </div>
        {{/each}}

    </div>
    
    {{#if products.length}}
    {{#each products}}
    <div class="row">
        <form action="/" method="POST">
            <div class="divider"></div>
            <div class="section">
                <span>name: {{name}} </span>
                <span>price: {{price}}</span>
                <span style="font-weight: 600;"> $ </span>
                <span>category: {{category}} </span>
                <span>supplier: {{supplier}} </span>
            </div>
            <input type="hidden" value="{{_id}}" name="id">
            {{#if inTheBasket}}
            <button type="submit" class="bin btn-small teal accent-4">Remove</button>
            {{else}}
            <button type="submit" class="bin btn-small orange accent-4">Put</button>
            {{/if}}
        </form>
    </div>
    {{/each}}

    {{else}}
    <p>No products!</p>
    {{/if}}

</div>