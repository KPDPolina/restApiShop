<h3>Basket</h3>
<div>
    {{#if products.length}}
    <ul>
        {{#each products}}
        <div class="row">
            <span>{{products}}</span>
            <form action="/basket" method="POST">
                <div class="divider"></div>
                <div class="section">
                    <span >name: </span>
                    <span>{{name}} </span>
                    <span >price $: </span>
                    <span>{{price}} </span>
                    <span >category: </span>
                    <span>{{category}} </span>
                    <span >supplier: </span>
                    <span>{{supplier}} </span>

                    <input type="hidden" value="{{_id}}" name="id">
                </div>
                <button type="submit" class="bin btn-small">Remove</button>
            </form>
        </div>
        {{/each}}
    </ul>
    {{else}}
    <p>No products in the basket!</p>
    {{/if}}
</div>